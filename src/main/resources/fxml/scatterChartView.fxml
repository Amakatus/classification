      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="200.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Settings">
               <font>
                  <Font size="16.0" />
               </font></Label>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="5.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="5.0">
                     <children>
                        <Label text="Axis X" />
                        <MFXComboBox fx:id="axisXSelector" minWidth="125.0" prefWidth="125.0" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="5.0">
                     <children>
                        <Label text="Axis Y" />
                        <MFXComboBox fx:id="axisYSelector" minWidth="125.0" prefWidth="125.0" />
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" prefHeight="33.0" prefWidth="100.0">
               <children>
                  <MFXCheckbox />
                  <Label text="Normalize datas" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" prefHeight="33.0" prefWidth="100.0">
               <children>
                  <MFXCheckbox />
                  <Label text="Display reference datas" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" prefHeight="33.0" prefWidth="100.0" spacing="10.0">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
               <children>
                  <MFXButton text="Add new point" />
                  <MFXButton onMouseClicked="#classifyDatasButtonClicked" text="Classify points" />
               </children>
            </HBox>
         </children>
      </VBox>
   </right>
